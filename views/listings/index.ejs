<% layout("/layouts/boilerplate") %>

<style>
  .filters {
    display: flex;
    flex-wrap: nowrap; /* horizontal scrolling */
    align-items: center;
    gap: 2rem;
    margin-top: 1rem;
    overflow-x: auto;
    scroll-behavior: smooth;
  }
  .filter {
    text-align: center;
    opacity: 0.7;
    flex: 0 0 auto; /* prevent shrinking in scroll */
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .filter p {
    font-size: 0.8rem;
  }
  .tax-toggle {
    margin-left: auto;
    display: flex;
    align-items: center;
    border: 1px solid black;
    border-radius: 1rem;
    height: 3rem;
    padding: 1rem;
    flex-shrink: 0;
  }
  .tax-info {
    display: none;
  }
  .scroll-btn {
    border: none;
    background: transparent;
    font-size: 1.2rem;
    cursor: pointer;
    padding: 0.5rem;
  }
  #filter-wrapper {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
</style>

<div id="filter-wrapper">
  <div id="filters-container" style="overflow: hidden; flex-grow: 1;">
    <div class="filters" id="filters">

      <div class="filter">
        <a href="/listings/filter/Trending" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </a>
      </div>

      <div class="filter">
        <a href="/listings/filter/Rooms" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
        </a>
      </div>

      <div class="filter">
        <a href="/listings/filter/Iconic Cities" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-mountain-city"></i></div>
          <p>Iconic Cities</p>
        </a>
      </div>

      <div class="filter">
        <a href="/listings/filter/Mountains" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-mountain"></i></div>
          <p>Mountains</p>
        </a>
      </div>

      <div class="filter">
        <a href="/listings/filter/Castles" style="text-decoration: none; color: inherit;">
          <div><i class="fa-brands fa-fort-awesome"></i></div>
          <p>Castles</p>
        </a>
      </div>

      <div class="filter">
        <a href="/listings/filter/Amazing Pools" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <p>Amazing Pools</p>
        </a>
      </div>

      <div class="filter">
        <a href="/listings/filter/Camping" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-campground"></i></div>
          <p>Camping</p>
        </a>
      </div>

      <div class="filter">
        <a href="/listings/filter/Village" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-cow"></i></div>
          <p>Village</p>
        </a>
      </div>

      <div class="filter">
        <a href="/listings/filter/Igloo" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-igloo"></i></div>
          <p>Igloo</p>
        </a>
      </div>

      <div class="filter">
        <a href="/listings/filter/Domes" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-landmark-dome"></i></div>
          <p>Domes</p>
        </a>
      </div>

      <div class="filter">
        <a href="/listings/filter/House Boats" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-sailboat"></i></div>
          <p>House Boats</p>
        </a>
      </div>

    </div>
  </div>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">Display total after Taxes</label>
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of allListings) { %>
  <a href="/listings/<%=listing._id%>" class="listing-link" style="text-decoration: none;">
    <div class="card col listing-card">
      <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br/>
          &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>/night
          <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

<script>
  // Tax toggle
  let taxToggle = document.getElementById("switchCheckDefault");
  taxToggle.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (let i = 0; i < taxInfo.length; i++) {
      taxInfo[i].style.display = taxToggle.checked ? "inline" : "none";
    }
  });
</script>

<!-- CHANGE END -->