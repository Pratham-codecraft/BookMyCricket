<% layout("/layouts/boilerplate") %>

<style>
  .filters {
    display: flex;
    flex-wrap: nowrap; /* horizontal scrolling */
    align-items: center;
    gap: 2rem;
    margin-top: 1rem;
    overflow-x: auto;
    scroll-behavior: smooth;
  }
  .filter {
    text-align: center;
    opacity: 0.7;
    flex: 0 0 auto; /* prevent shrinking in scroll */
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .filter p {
    font-size: 0.6rem;
  }
  .tax-toggle {
    margin-left: 1rem;
    display: flex;
    align-items: center;
    border: 1px solid black;
    border-radius: 1rem;
    height: 3rem;
    padding: 1rem;
    flex-shrink: 0;
  }
  .tax-info {
    display: none;
  }
  .scroll-btn {
    border: none;
    background: transparent;
    font-size: 1.2rem;
    cursor: pointer;
    padding: 0.5rem;
  }
  #filter-wrapper {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
</style>

<div id="filter-wrapper">
  <div id="filters-container" style="overflow: hidden; flex-grow: 1;">
    <div class="filters" id="filters">

      <div class="filter">
        <a href="/listings/filter/Trending" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </a>
      </div>

      <div class="filter">
        <a href="/listings/filter/Local Grounds" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-map-location-dot"></i></div>
          <p>Local Grounds</p>
        </a>
      </div>

      <div class="filter">
        <a href="/listings/filter/IndoorArenas" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-building"></i></div>
          <p>Indoor Arenas</p>
        </a>
      </div>

      <div class="filter">
        <a href="/listings/filter/Coaching grounds" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-chalkboard-user"></i></div>
          <p>Coaching grounds</p>
        </a>
      </div>

      <div class="filter">
        <a href="/listings/filter/AmateurLeagues" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-people-group"></i></div>
          <p>Amateur Leagues</p>
        </a>
      </div>

      <div class="filter">
        <a href="/listings/filter/Tournament grounds" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-trophy"></i></div>
          <p>Tournament grounds</p>
        </a>
      </div>

      <div class="filter">
        <a href="/listings/filter/Turf Grounds" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-baseball-bat-ball"></i></div>
          <p>Turf Grounds</p>
        </a>
      </div>

      <div class="filter">
        <a href="/listings/filter/Astro Turf" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-campground"></i></div>
          <p>Astro Turf</p>
        </a>
      </div>

      <div class="filter">
        <a href="/listings/filter/Backyard" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-house"></i></div>
          <p>Backyard Grounds</p>
        </a>
      </div>

      <div class="filter">
        <a href="/listings/filter/Night Cricket" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-moon"></i></div>
          <p>Night Cricket</p>
        </a>
      </div>

      <div class="filter">
        <a href="/listings/filter/Beach Cricket" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-umbrella-beach"></i></div>
          <p>Beach Cricket</p>
        </a>
      </div>

    </div>
  </div>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">Display total after Taxes</label>
    </div>
  </div>
</div>


<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of allListings) { %>
  <a href="/listings/<%=listing._id%>" class="listing-link" style="text-decoration: none;">
    <div class="card col listing-card">
      <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br/>
          &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>/hour
          <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

<script>
  // Tax toggle
  let taxToggle = document.getElementById("switchCheckDefault");
  taxToggle.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (let i = 0; i < taxInfo.length; i++) {
      taxInfo[i].style.display = taxToggle.checked ? "inline" : "none";
    }
  });
</script>

<!-- CHANGE END -->